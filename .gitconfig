[push]
	default = matching
[color]
  	ui = auto

[color "branch"]
  	current = yellow reverse
  	local = yellow
  	remote = green

[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold

[color "status"]
  	added = yellow
  	changed = green
  	untracked = red 

[alias]
	lg = log --graph --pretty=format:'%C(bold red)%h%Creset -%C(yellow)%d%Creset %s %C(bold green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
